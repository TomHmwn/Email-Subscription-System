<div class="formContainer">
    <form action="/form/subscribed" method="post" class="subscribe">
        <label for="name">Name</label>
        <input type="text" id="name"name="name" placeholder="Name...">
        <label for="address">Address</label>
        <input type="text" id="address" name="address" placeholder="Address...">
        <label for="email">Email</label>
        <input type="email" id="email"name="email" placeholder="Email...">
        <label for="phone">Phone Number</label>
        <input type="tel" id="phone" name="phone" placeholder="Phone No...">
        
        
        <div class="checkContainer">
            <div>
            <label style="font-weight:bold">choose subscription type</label>
            </div>
            <input type="checkbox" id="checkbox" name="pdf"/> PDF Flyers<br />
            <input type="checkbox" name="videos"/> Videos <br />
            <input type="checkbox" name="link"/> Links <br />
            <input type="checkbox" name="event"/> Event Invitation <br/>
        </div>
        <input type="submit" name="Submit" value="Subscribe Now">
    </form>
</div>